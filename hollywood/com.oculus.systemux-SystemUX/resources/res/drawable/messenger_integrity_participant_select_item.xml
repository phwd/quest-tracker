<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_hovered="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/messenger_integrity_participant_select_item_border_radius"/>
                    <solid android:color="@color/button_background_secondary_hover"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/messenger_integrity_participant_select_item_border_radius"/>
                    <solid android:color="@color/button_background_secondary_pressed"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item android:gravity="bottom" android:bottom="5dp">
                <shape>
                    <size android:height="0dp"/>
                    <solid android:color="@color/dialog"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
