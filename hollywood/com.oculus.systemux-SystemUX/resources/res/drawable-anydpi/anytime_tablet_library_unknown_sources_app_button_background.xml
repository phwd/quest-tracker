<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="8dp"/>
            <solid android:color="?attr/ocCardBackground"/>
            <solid android:color="?attr/ocHoverOverlay"/>
            <stroke android:width="3dp" android:color="@color/oc_blue_50"/>
        </shape>
    </item>
    <item android:state_hovered="true">
        <shape>
            <corners android:radius="8dp"/>
            <solid android:color="?attr/ocCardBackground"/>
            <solid android:color="?attr/ocHoverOverlay"/>
            <stroke android:width="1dp" android:color="@color/oc_blue_50"/>
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="8dp"/>
            <solid android:color="?attr/ocCardBackground"/>
        </shape>
    </item>
</selector>
