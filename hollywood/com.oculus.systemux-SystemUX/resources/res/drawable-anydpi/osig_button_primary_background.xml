<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <selector>
            <item android:state_selected="true">
                <shape>
                    <corners android:radius="4dp"/>
                    <solid android:color="?attr/ocPrimaryButton"/>
                </shape>
            </item>
            <item>
                <shape>
                    <corners android:radius="4dp"/>
                    <solid android:color="?attr/ocSecondaryButton"/>
                </shape>
            </item>
        </selector>
    </item>
    <item android:drawable="@drawable/ocbutton_borderless"/>
</layer-list>
