<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="?attr/ocPanelBackground"/>
        </shape>
    </item>
    <item android:gravity="top|center_vertical|center_horizontal|center" android:bottom="0dp">
        <selector>
            <item android:state_selected="true">
                <shape>
                    <size android:height="4dp" android:width="56dp"/>
                    <corners android:radius="2dp"/>
                    <solid android:color="@color/anytime_button_selected_v2"/>
                </shape>
            </item>
            <item android:state_pressed="true">
                <shape>
                    <size android:height="4dp" android:width="56dp"/>
                    <corners android:radius="2dp"/>
                    <solid android:color="?attr/ocPressedOverlay"/>
                </shape>
            </item>
            <item android:state_hovered="true">
                <shape>
                    <size android:height="4dp" android:width="56dp"/>
                    <corners android:radius="2dp"/>
                    <solid android:color="?attr/ocHoverOverlay"/>
                </shape>
            </item>
            <item android:drawable="@android:color/transparent"/>
        </selector>
    </item>
</layer-list>
