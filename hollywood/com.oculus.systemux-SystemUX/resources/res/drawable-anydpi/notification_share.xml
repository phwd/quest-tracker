        <layer-list>
            <item android:height="42dp" android:width="42dp" android:drawable="@drawable/ic_notif_sharing_selected"/>
        </layer-list>
    </item>
    <item android:state_hovered="true">
        <layer-list>
            <item android:height="42dp" android:width="42dp" android:drawable="@drawable/ic_notif_sharing_hover"/>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item android:height="42dp" android:width="42dp" android:drawable="@drawable/ic_notif_sharing_default"/>
        </layer-list>
    </item>
</selector>
