<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true" android:state_hovered="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="5dp"/>
                    <solid android:color="@color/oc_white_a10"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_selected="true" android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="5dp"/>
                    <solid android:color="@color/oc_white_a10"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_hovered="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="5dp"/>
                    <solid android:color="@color/oc_white_a05"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="5dp"/>
                    <solid android:color="@color/oc_white_a05"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_selected="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="5dp"/>
                    <solid android:color="@color/oc_white_a10"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item android:gravity="bottom" android:bottom="5dp">
                <shape>
                    <size android:height="0dp"/>
                    <solid android:color="@color/oc_blue_70"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
