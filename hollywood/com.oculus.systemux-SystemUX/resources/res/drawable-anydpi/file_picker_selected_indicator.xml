<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <selector>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#99000000"/>
                </shape>
            </item>
        </selector>
    </item>
    <item>
        <selector>
            <item android:state_selected="true" android:height="24dp" android:width="24dp">
                <bitmap android:gravity="center" android:src="@drawable/oc_icon_check_circle_filled_24_d2d2d2"/>
            </item>
            <item android:state_selected="false" android:height="24dp" android:width="24dp">
                <bitmap android:gravity="center" android:src="@drawable/oc_icon_check_box_circle_filled_24_d2d2d2"/>
            </item>
        </selector>
    </item>
</layer-list>
