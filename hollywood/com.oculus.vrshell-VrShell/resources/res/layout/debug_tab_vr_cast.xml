        <ProgressBar android:id="@+id/vrcast_connect_progress" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true"/>
        <TextView android:textSize="16sp" android:textColor="#ffdddddd" android:id="@+id/vrcast_device_info_text" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_centerHorizontal="true"/>
        <TextView android:textSize="16sp" android:textColor="#ffdddddd" android:id="@+id/vrcast_device_status_text" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/vrcast_device_info_text" android:layout_centerHorizontal="true"/>
        <com.oculus.vrshell.panels.views.ShellButton android:id="@+id/vrcast_cancel_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="10dp" android:text="Cancel" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</com.oculus.panelapp.debug.VrCastTab>
