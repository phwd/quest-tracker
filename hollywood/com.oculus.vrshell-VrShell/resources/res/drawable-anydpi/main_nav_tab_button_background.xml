                <shape>
                    <size android:height="1dp"/>
                    <solid android:color="@color/tabDivider"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_selected="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/tabButtonSelected"/>
                </shape>
            </item>
            <item android:gravity="bottom" android:bottom="1dp">
                <shape>
                    <size android:height="2dp"/>
                    <solid android:color="@color/tabUnderlineSelected"/>
                </shape>
            </item>
            <item android:gravity="bottom" android:bottom="0dp">
                <shape>
                    <size android:height="1dp"/>
                    <solid android:color="@color/tabDivider"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/tabButton"/>
                </shape>
            </item>
            <item android:gravity="bottom" android:bottom="1dp">
                <shape>
                    <size android:height="2dp"/>
                    <solid android:color="@color/tabUnderline"/>
                </shape>
            </item>
            <item android:gravity="bottom" android:bottom="0dp">
                <shape>
                    <size android:height="1dp"/>
                    <solid android:color="@color/tabDivider"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
