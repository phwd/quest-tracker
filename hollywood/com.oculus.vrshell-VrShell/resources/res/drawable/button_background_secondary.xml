<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/ocbutton_border_radius"/>
            <solid android:color="@color/button_background_secondary_disabled"/>
        </shape>
    </item>
    <item android:state_selected="true" android:state_hovered="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/ocbutton_border_radius"/>
            <solid android:color="@color/button_background_secondary_selected_hover"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/ocbutton_border_radius"/>
            <solid android:color="@color/button_background_secondary_pressed"/>
        </shape>
    </item>
    <item android:state_hovered="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/ocbutton_border_radius"/>
            <solid android:color="@color/button_background_secondary_hover"/>
        </shape>
    </item>
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/ocbutton_border_radius"/>
            <solid android:color="@color/button_background_secondary_selected"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/ocbutton_border_radius"/>
            <solid android:color="@color/button_background_secondary_default"/>
        </shape>
    </item>
</selector>
