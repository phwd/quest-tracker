<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:gravity="center_vertical" android:orientation="vertical" android:background="@drawable/widget_background" android:padding="@dimen/widget_padding" android:layout_width="@dimen/widget_width" android:layout_height="@dimen/widget_height">
