            <TextView android:textSize="@dimen/text_secondary_size" android:textColor="@color/text_secondary" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/widget_divider" android:layout_marginHorizontal="@dimen/widget_text_spacing" android:textFontWeight="700"/>
