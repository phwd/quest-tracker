<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <corners android:topLeftRadius="8dp" android:topRightRadius="8dp" android:bottomLeftRadius="8dp" android:bottomRightRadius="8dp"/>
            <solid android:color="?attr/ocPressedOverlay"/>
        </shape>
    </item>
    <item android:state_hovered="true">
        <shape>
            <corners android:topLeftRadius="8dp" android:topRightRadius="8dp" android:bottomLeftRadius="8dp" android:bottomRightRadius="8dp"/>
            <solid android:color="?attr/ocHoverOverlay"/>
        </shape>
    </item>
    <item android:state_selected="true">
        <shape>
            <corners android:topLeftRadius="8dp" android:topRightRadius="8dp" android:bottomLeftRadius="8dp" android:bottomRightRadius="8dp"/>
            <solid android:color="?attr/ocSecondaryButton"/>
        </shape>
    </item>
</selector>
