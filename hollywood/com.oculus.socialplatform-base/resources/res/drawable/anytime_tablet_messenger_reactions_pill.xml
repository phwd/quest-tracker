<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="@dimen/abc_control_corner_material" android:color="?attr/ocPanelBackground"/>
            <corners android:radius="@dimen/messenger_reactions_pill_radius"/>
            <solid android:color="?attr/ocContextMenuBackground"/>
        </shape>
    </item>
    <item>
        <selector>
            <item android:state_pressed="true">
                <shape android:shape="rectangle">
                    <stroke android:width="@dimen/abc_control_corner_material" android:color="?attr/ocPanelBackground"/>
                    <corners android:radius="@dimen/messenger_reactions_pill_radius"/>
                    <solid android:color="?attr/ocPressedOverlay"/>
                </shape>
            </item>
            <item android:state_hovered="true">
                <shape android:shape="rectangle">
                    <stroke android:width="@dimen/abc_control_corner_material" android:color="?attr/ocPanelBackground"/>
                    <corners android:radius="@dimen/messenger_reactions_pill_radius"/>
                    <solid android:color="?attr/ocHoverOverlay"/>
                </shape>
            </item>
            <item android:drawable="@android:color/transparent"/>
        </selector>
    </item>
</layer-list>
